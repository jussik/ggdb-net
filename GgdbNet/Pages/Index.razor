@page "/"
@using GgdbNet.Models

@if (Games == null)
{
    <DbDropArea OnGamesLoaded="GamesLoaded"></DbDropArea>
}
else
{
    <GamesList Games="Games"></GamesList>
}

@code {
    private IReadOnlyList<Game>? Games { get; set; }

    private void GamesLoaded(IReadOnlyList<Game> games) => Games = games;
}